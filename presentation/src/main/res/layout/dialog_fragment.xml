<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/yandex_picture_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginTop="8dp"
        android:drawableLeft="@drawable/ic_search_black_24dp"
        android:hint="@string/search"
        android:imeOptions="actionSearch"
        android:maxLines="1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/replace_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="@string/replace"
        app:layout_constraintEnd_toEndOf="@+id/yandex_picture_search"
        app:layout_constraintStart_toStartOf="@+id/yandex_picture_search"
        app:layout_constraintTop_toBottomOf="@+id/yandex_picture_search" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:hint="@string/add"
        app:layout_constraintEnd_toEndOf="@+id/replace_button"
        app:layout_constraintStart_toStartOf="@+id/replace_button"
        app:layout_constraintTop_toBottomOf="@+id/replace_button" />

</android.support.constraint.ConstraintLayout>